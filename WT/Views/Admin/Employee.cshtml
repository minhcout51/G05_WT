@model IEnumerable<WT.Models.Employee>

@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/AdLayout.cshtml";
}

<h2 class="Title">Employee Management</h2>

<h3>
    @Html.ActionLink("Create New Employee", "CreateEmployee")
</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEmployee", new { id=item.Id  }, new { @style = "font-size:1.5rem;" }) |
            @Html.ActionLink("Details", "EmployeeDetails", new { id = item.Id }, new { @style = "font-size:1.5rem; margin-left: 0.3rem;" }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Id }, new { @style = "font-size:1.5rem; margin-left: 0.3rem;" })
        </td>
    </tr>
}

</table>
<style>
    .Image {
        max-width: 10rem;
        height: auto;
    }

    th {
        color: #00AA95;
        font-size: 4rem;
    }

    td {
        font-size: 3rem;
        color: white;
    }

    h2 {
        color: white;
        margin: 0.5rem 0 0 0;
    }

    h3 {
        margin: 1rem 0 0 0;
    }

    table {
        margin: 1rem 0 0 0;
    }

    button {
        background-color: white;
    }

        button:hover {
            background-color: #00AA95;
            opacity: 100%;
        }
</style>